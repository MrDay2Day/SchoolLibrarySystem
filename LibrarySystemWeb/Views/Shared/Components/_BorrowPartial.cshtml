@model LibrarySystemWeb.Models.BorrowViewModel

<div class="container">
    <div id="borrowFormError" class="alert alert-danger" style="display: none;"></div>

    <h4>Borrow: @Model.BookTitle</h4>

    <form id="borrowForm" method="post" action="/Book/BorrowBook">
        <input type="hidden" name="BookId" value="@Model.BookId" />

        <div class="form-group">
            <label for="borrowDays">How many days would you like to borrow this book?</label>
            <select class="form-control" id="borrowDays" name="BorrowDays">
                <option value="7">7 days</option>
                <option value="14" selected>14 days</option>
                <option value="21">21 days</option>
                <option value="30">30 days</option>
            </select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Confirm Borrow</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
    </form>
</div>