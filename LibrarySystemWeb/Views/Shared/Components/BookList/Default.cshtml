@model List<LibrarySystemWeb.Models.Book>
@{
    bool isAuthenticated = User.Identity != null && User.Identity.IsAuthenticated;
}

<div class="book-list">
    <h3 style="margin-top: 40px; margin-bottom: 40px;">Featured Books</h3>
    <div class="row" >
        @foreach (var book in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card" style="height: 250px; border: 3px solid #0d6efd; border-radius: 15px;">
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <h5 class="card-subtitle mb-2 text-muted">@book.Author</h5>
                        <p class="card-text">@book.Description</p>
                       
                    </div>
                    @if (book.Available && isAuthenticated)
                    {
                        <a class="btn btn-primary" href="?bookId=@book.BookId">
                            Select
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>